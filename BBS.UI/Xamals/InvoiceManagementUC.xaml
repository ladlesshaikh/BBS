                <TextBox Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Height="30" IsReadOnly="True" Text="{Binding DataContext.SelectedItem.TotalAmount, Mode=OneWay,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Grid}}}"></TextBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
